<template id="lessons">
  <div class="page">

    <breadcrumbs>
      <template #path>
        <li class="breadcrumb-item" data-t="">Main</li>
      </template>
    </breadcrumbs>

    <h1 data-t="">Lessons</h1>

    <div class="loadable-container">

      <div class="lesson-list">
        <div class="row">
          <div v-for="item of items" :key="item.id" class="col-md-6 col-lg-3">
            <div class="lesson-card">
              <div class="lesson-card-head" data-t="">Lesson</div>
              <h5>
                <a @click.prevent="onLesson(item.id)" href="#">
                  <span data-t="meta.class.lesson">{{item.name}}</span>
                </a>
              </h5>
            </div>
          </div>
        </div>
      </div>

      <pagination @change="load"></pagination>

      <div v-show="!loading && empty" class="alert-danger alert">
        <span data-t="">No lessons found</span>
      </div>

      <div v-show="loading" class="loader">
        <i class="fa fa-spinner fa-spin"></i>
      </div>
    </div>
  </div>
</template>