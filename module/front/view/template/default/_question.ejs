<template id="question">
    <div class="page">
        <div class="question loadable-container">
            <template v-show="!loading">
                <breadcrumbs>
                    <template #path>
                        <li class="breadcrumb-item">
                            <a @click.prevent="toLessons" href="#" data-t="">Main</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a @click.prevent="onLesson" href="#" data-t="">Lesson</a>
                        </li>
                        <li class="breadcrumb-item" data-t="">Question</li>
                    </template>
                </breadcrumbs>

                <h1 data-t="meta.class.question">{{text}}</h1>

                <h3 class="subtitle">
                    <span data-t="">Lesson</span>:&nbsp;
                    <a @click.prevent="onLesson" href="#">{{lessonTitle}}</a>
                </h3>

                <div v-if="files.length" class="file-list">
                    <h3 class="file-list-title" data-t="">Question files</h3>
                    <div v-for="item of files" class="file-item">
                        <a :href="item.url" target="_blank" data-t="">{{item.name}}</a>
                        <div class="file-item-description">
                            <span data-t="meta.class.questionFile">{{item.description}}</span>
                        </div>
                    </div>
                </div>
            </template>

            <div v-show="loading" class="loader">
                <i class="fa fa-spinner fa-spin"></i>
            </div>
        </div>
    </div>
</template>